@model IEnumerable<WebsitesProject.Models.WebsiteViewModels.WebsiteViewModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Domain)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Domain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WebsiteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WebsiteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WebsiteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
